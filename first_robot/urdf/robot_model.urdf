<?xml version="1.0"?>

<robot name="first_robot">

<material name="blue">
    <color rgba="0 0 0.8 1"/>
     
</material>

 <link name="world"/>

    <joint name="glue_to_world" type="fixed">
        <parent link="world"/>
        <child link="link1"/>
    </joint> 
   
    <link name="link1">
        
    <collision>
        <origin xyz="0.0 0.0 0.25" rpy="0.0 0.0 0.0"/>
        <geometry>
            <box size="0.5 0.5 0.3"/>
        </geometry>
    </collision>

         <inertial>
            <origin xyz="0.0 0.0 0.25" rpy="0.0 0.0 0.0"/>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial> 
        
        <visual>
              <origin xyz="0.0 0.0 0.25" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.5 0.5 0.5"/>
            </geometry> 

            <material name="blue"/>

        </visual>
        
   
     </link> 

    <link name="link2">
        
        <collision>
        <origin xyz="0.0 0.0 1.75" rpy="0.0 0.0 0.0"/>
        <geometry>
            <cylinder radius="0.12" length="2.5"/>
        </geometry>
    </collision>
        
         <inertial>
            <origin xyz="0.0 0.0 1.75" rpy="0.0 0.0 0.0"/>
            <mass value="2"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial> 
        
        <visual>
              <origin xyz="0.0 0.0 1.75" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.12" length="2.5"/>
            </geometry> 

            <material name="blue"/>
        </visual>

    </link>  

    <joint name="main_joint" type="continuous">
        <parent link="link1"/>
        <child link="link2"/>
    </joint>


        
</robot>